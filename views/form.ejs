<form method="POST" action="/new">
  <fieldset>
    <legend>New Message</legend>

    <div>
      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Your name"
        required
      />
    </div>

    <div>
      <label for="message">Message:</label>
      <textarea
        id="message"
        name="message"
        placeholder="Write your message..."
        rows="4"
        required
      ></textarea>
    </div>

    <button type="submit">Send</button>
  </fieldset>
</form>
